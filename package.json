{
  "name": "powerquery-language",
  "version": "1.0.0",
  "private": true,
  "description": "TextMate grammar files for Power Query / M language",
  "main": "build/build.js",
  "scripts": {
    "build": "tsc -b build && npm run build:xml && npm run build:json",
    "build:xml": "node build/build.js",
    "build:json": ".\\node_modules\\.bin\\npx js-yaml PowerQuery.YAML-tmLanguage > PowerQuery.tmLanguage.json",
    "test:latest": "npm run build:xml && npm run test",
    "test": "mocha -r ts-node/register tests/*.ts"
  },
  "devDependencies": {
    "@microsoft/powerquery-parser": "^0.1.9",
    "@types/chai": "^4.1.7",
    "@types/js-yaml": "^3.12.1",
    "@types/mocha": "^5.2.6",
    "@types/plist": "^3.0.2",
    "chai": "^4.2.0",
    "js-yaml": "^3.13.1",
    "mocha": "^6.1.4",
    "npx": "^10.2.0",
    "plist": "^3.0.1",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "vscode-textmate": "^3.3.3"
  }
}
